    <changeSet author="liquibase" id="fix_sequences" dbms="oracle">
        <sql>
            ALTER SEQUENCE ${schema}."BINARY_FILE_SEQ" INCREMENT BY 1000000;
            ALTER SEQUENCE ${schema}."RENDICONTAZIONE_SEQ" INCREMENT BY 1000000;
            ALTER SEQUENCE ${schema}."RENDICONTAZIONE_SFTP_RECEIVE_QUEUE_SEQ" INCREMENT BY 1000000;
            ALTER SEQUENCE ${schema}."RENDICONTAZIONE_SFTP_SEND_QUEUE_SEQ" INCREMENT BY 1000000;

            SELECT ${schema}."BINARY_FILE_SEQ".NEXTVAL from dual;
            SELECT ${schema}."RENDICONTAZIONE_SEQ".NEXTVAL from dual;
            SELECT ${schema}."RENDICONTAZIONE_SFTP_RECEIVE_QUEUE_SEQ".NEXTVAL from dual;
            SELECT ${schema}."RENDICONTAZIONE_SFTP_SEND_QUEUE_SEQ".NEXTVAL from dual;

            ALTER SEQUENCE ${schema}."BINARY_FILE_SEQ" INCREMENT BY 1;
            ALTER SEQUENCE ${schema}."RENDICONTAZIONE_SEQ" INCREMENT BY 1;
            ALTER SEQUENCE ${schema}."RENDICONTAZIONE_SFTP_RECEIVE_QUEUE_SEQ" INCREMENT BY 1;
            ALTER SEQUENCE ${schema}."RENDICONTAZIONE_SFTP_SEND_QUEUE_SEQ" INCREMENT BY 1;
        </sql>
